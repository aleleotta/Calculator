<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center"
            HorizontalOptions="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button BackgroundColor="Blue" Text="7" Grid.Row="1" Grid.Column="1"/>
                <Button BackgroundColor="Blue" Text="7" Grid.Row="1" Grid.Column="2"/>
                <Button BackgroundColor="Blue" Text="7" Grid.Row="1" Grid.Column="3"/>
                <Button BackgroundColor="Blue" Text="7" Grid.Row="1" Grid.Column="4"/>
                <Button BackgroundColor="Blue" Text="7" Grid.Row="2" Grid.Column="1"/>
                <Button BackgroundColor="Blue" Text="7" Grid.Row="2" Grid.Column="2"/>
                <Button BackgroundColor="Blue" Text="7" Grid.Row="2" Grid.Column="3"/>
                <Button BackgroundColor="Blue" Text="7" Grid.Row="2" Grid.Column="4"/>
                <Button BackgroundColor="Blue" Text="7" Grid.Row="3" Grid.Column="1"/>
                <Button BackgroundColor="Blue" Text="7" Grid.Row="3" Grid.Column="2"/>
                <Button BackgroundColor="Blue" Text="7" Grid.Row="3" Grid.Column="3"/>
                <Button BackgroundColor="Blue" Text="7" Grid.Row="3" Grid.Column="4"/>
                <Button BackgroundColor="Blue" Text="7" Grid.Row="4" Grid.Column="1"/>
                <Button BackgroundColor="Blue" Text="7" Grid.Row="4" Grid.Column="2"/>
                <Button BackgroundColor="Blue" Text="7" Grid.Row="4" Grid.Column="3"/>
                <Button BackgroundColor="Blue" Text="7" Grid.Row="4" Grid.Column="4"/>

            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
